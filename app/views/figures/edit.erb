<h1>Edit A Historical Figure</h1>

<form action="/figures/<%=@figure.slug%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <h2>Name</h2>
  <label>Figure name:</label>
  <input type="text" name="Name" value="<%= @figure.name %>">

  <br></br>

  <h2><label>Title(s)</label></h2>
  <%Title.all.each do |title|%>
    <label><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="<%=title.name%>" <%='checked' if @figure.titles.include?(title) %>>
    <br></br>
  <%end%>

  <label>Create a new title:</label>
  <input type="text" name="New Title Name">
  <br><br/>

  <h2><label>Landmark(s)</label></h2>
  <%Landmark.all.each do |landmark|%>
    <label><%= landmark.name %></label>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="<%=landmark.name%>" <%='checked' if @figure.landmarks.include?(landmark) %>>
    <br></br>
  <%end%>

  <label>Create a new landmark:</label>
  <br></br>
  <label for="landmark_name">Name:</label>
  <input type="text" name="New Landmark Name" id="landmark_name">
  <label for="landmark_year">Year:</label>
  <input type="text" name="New Landmark Year" id="landmark_year">

  <br></br>
  <input type="submit" value="Save">
</form>
